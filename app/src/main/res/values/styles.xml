<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1d1613</item>
        <item name="actionBarDivider">@color/colorPrimaryDark</item>
        <item name="actionBarItemBackground">@color/colorAccent</item>
        <item name="actionMenuTextColor">#d3a625</item>
    </style>

    <style name="tapestry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/padding_lg</item>
        <item name="android:layout_marginBottom">@dimen/margin_med</item>
    </style>

    <style name="line">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_margin">@dimen/margin_lg</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="portrait">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/top_margin_med</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/bottom_margin_med</item>
        <item name="android:paddingLeft">@dimen/left_padding_large</item>
        <item name="android:paddingRight">@dimen/right_padding_large</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="question">
        <item name="android:layout_marginTop">@dimen/top_margin_med</item>
        <item name="android:padding">@dimen/padding_lg</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radiobutton">
        <item name="android:padding">@dimen/padding_lg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_marginTop">@dimen/top_margin_med</item>
        <item name="android:padding">@dimen/padding_lg</item>
        <item name="android:layout_marginLeft">@dimen/left_margin_sm</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">@dimen/padding_lg</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
